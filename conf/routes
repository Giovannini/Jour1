# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                        controllers.Application.index

GET         /init                                                    controllers.WorldInitialisation.initGraph

GET         /concepts                                                controllers.RestCall.getAllConcepts
GET         /concepts/simple                                         controllers.RestCall.getAllSimplifiedConcepts
GET         /instances                                               controllers.WorldInitialisation.getWorld
GET         /instances/:initInstanceId/:actionType/:conceptId        controllers.RestCall.getPossibleDestinationOfAction(initInstanceId: Long, actionType: Long, conceptId: Long)

#Instances manipulation
GET         /instances/edit/:instanceId                              controllers.RestCall.editInstance(instanceId: Int)
GET         /instances/create/:conceptId                             controllers.RestCall.createInstance(conceptId: Int)
POST        /instances/delete/:instanceId                            controllers.ontology.InstanceManager.delete(instanceId: Int)
POST        /instances/update                                        controllers.ontology.InstanceManager.update
POST        /instances/create                                        controllers.ontology.InstanceManager.create
GET         /instances/:instanceId                                   controllers.RestCall.getInstanceById(instanceId: Int)

#Graph manipulation
GET         /relation/create                                         controllers.ontology.RelationManager.createRelation
POST        /relation/create                                         controllers.ontology.RelationManager.create
GET         /relations/:conceptId/delete/:id/:dest                   controllers.ontology.RelationManager.delete(conceptId: Long, id: Long, dest: Long)

GET         /properties                                              controllers.graph.GraphVisualisation.getProperties
GET         /preconditions                                           controllers.graph.GraphVisualisation.getPreconditions
GET         /actions                                                 controllers.graph.GraphVisualisation.getActions


# Graph visualisation
GET         /graph                                                   controllers.graph.GraphVisualisation.index

GET         /graph/properties/:propertyId                            controllers.graph.GraphVisualisation.getProperty(propertyId: Int)
GET         /graph/action/:actionLabel                               controllers.graph.GraphVisualisation.getAction(actionLabel: String)

POST        /graph/node/new                                          controllers.graph.ConceptController.createConcept
GET         /graph/node/delete/:label                                controllers.graph.ConceptController.deleteConcept(label: String)
GET         /graph/node/:label/actions                               controllers.graph.ConceptController.getActions(label: String)
POST        /graph/node/:label/edit                                  controllers.graph.ConceptController.updateConcept(label: String)
GET         /graph/node/:search/:deepness                            controllers.graph.ConceptController.readConcept(search: String, deepness: Int)

# Relations visualisation
GET         /relations                                               controllers.rules.RelationVisualisation.index
GET         /relations/create                                        controllers.rules.RelationVisualisation.createForm
POST        /relations/create                                        controllers.rules.RelationVisualisation.createSubmit
GET         /relations/update/:id                                    controllers.rules.RelationVisualisation.updateForm(id: Long)
POST        /relations/update/:id                                    controllers.rules.RelationVisualisation.updateSubmit(id: Long)
GET         /relations/delete/:id                                    controllers.rules.RelationVisualisation.delete(id: Long)

# Action CRUD
GET         /action                                                  controllers.graph.ActionController.index
GET         /action/:label                                           controllers.graph.ActionController.readAction(label: String)
POST        /action/:label                                           controllers.graph.ActionController.createAction(label: String)
PUT         /action/:label                                           controllers.graph.ActionController.updateAction(label: String)
DELETE      /action/:label                                           controllers.graph.ActionController.deleteAction(label: String)

# Rules visualisation
GET         /rules                                                   controllers.rules.RulesVisualisation.index
GET         /rules/delete/:id                                        controllers.rules.RulesVisualisation.delete(id: Long)
GET         /rules/load/:id                                          controllers.rules.RulesVisualisation.load(id: Long)
GET         /rules/save                                              controllers.rules.RulesVisualisation.form
POST        /rules/save                                              controllers.rules.RulesVisualisation.submit
GET         /preconditions                                           controllers.rules.PreconditionsVisualisation.preconditions

# Map routes
GET         /map                                                     controllers.MapController.show
POST        /action                                                  controllers.RestCall.executeAction
GET         /relations/:conceptId                                    controllers.RestCall.getAllActionsOf(conceptId: Int)

GET         /needs/:instanceID                                       controllers.RestCall.getBestAction(instanceID: Long)
GET         /next                                                    controllers.RestCall.next()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                            controllers.Assets.at(path="/public", file)

    