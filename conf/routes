# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                        controllers.Application.index

GET         /init                                                    controllers.WorldInitialisation.initGraph

GET         /concepts                                                controllers.RestCall.getAllConcepts
GET         /instances                                               controllers.WorldInitialisation.getWorld
GET         /instances/:initInstanceId/:actionType/:conceptId        controllers.RestCall.getPossibleDestinationOfAction(initInstanceId: Long, actionType: Long, conceptId: Long)

#Instances manipulation
GET         /instances/edit/:instanceId                              controllers.RestCall.editInstance(instanceId: Int)
GET         /instances/create/:conceptId                             controllers.RestCall.createInstance(conceptId: Int)
GET         /instances/delete/:instanceId                            controllers.ontology.InstanceManager.delete(instanceId: Int)
POST        /instances/update                                        controllers.ontology.InstanceManager.update
POST        /instances/create                                        controllers.ontology.InstanceManager.create

#Graph manipulation
GET         /relation/create                                         controllers.ontology.RelationManager.createRelation
POST        /relation/create                                         controllers.ontology.RelationManager.create
GET         /relation/delete/:id                                     controllers.ontology.RelationManager.deleteAll(id: Long)

# Graph visualisation
GET         /graph                                                   controllers.graph.GraphVisualisation.index
GET         /graph/properties                                        controllers.graph.GraphVisualisation.getProperties
GET         /graph/properties/:propertyId                            controllers.graph.GraphVisualisation.getProperty(propertyId: Int)
GET         /graph/action/:actionLabel                               controllers.graph.GraphVisualisation.getAction(actionLabel: String)
POST        /graph/node/new                                         controllers.graph.ConceptController.createConcept
GET         /graph/:search/:deepness                                 controllers.graph.ConceptController.searchConcept(search: String, deepness: Int)

# Rules visualisation
GET         /rules                                                   controllers.rules.RulesVisualisation.index
GET         /rules/delete/:id                                        controllers.rules.RulesVisualisation.delete(id: Long)
GET         /rules/load/:id                                          controllers.rules.RulesVisualisation.load(id: Long)
GET         /rules/save                                              controllers.rules.RulesVisualisation.form
POST        /rules/save                                              controllers.rules.RulesVisualisation.submit
GET         /preconditions                                           controllers.rules.PreconditionsVisualisation.preconditions

# Map routes
GET         /map                                                     controllers.MapController.show
POST        /action                                                  controllers.RestCall.executeAction
GET         /relations/:conceptId                                    controllers.RestCall.getAllActionsOf(conceptId: Int)
GET         /relations/:conceptId/delete/:id/:dest                   controllers.ontology.RelationManager.delete(conceptId: Long, id: Long, dest: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                            controllers.Assets.at(path="/public", file)

    