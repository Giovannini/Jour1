# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index

GET         /init                        controllers.WorldInitialisation.initGraph

GET         /concepts                    controllers.RestCall.getAllConcepts
GET         /relations/:conceptId        controllers.RestCall.getAllRelationsOf(conceptId: Int)
POST        /relations                   controllers.RestCall.getPossibleDestinationOfAction
GET         /instances                   controllers.WorldInitialisation.getWorld
GET         /instances/:conceptId        controllers.Application.getAllInstancesOf(conceptId: Int)

# Graph visualisation
->          /graph                       graph.Routes

# Rules visualisation
->         /rules                        rules.Routes

# Map routes
GET         /map                         controllers.MapController.show
POST        /action                      controllers.RestCall.executeAction

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)

    